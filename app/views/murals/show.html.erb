<% @reviews.each do |review| %>
<% if current_user && current_user.admin? || current_user && current_user.id == review.user_id %>
<% review_user = User.find(review.user_id) %>
<%= button_to "Delete Review by #{review_user.username}", review_path(review), method: :delete %>
<% end %>
